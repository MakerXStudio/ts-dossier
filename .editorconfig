[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{*.css, *.less, *.scss}]
indent_size = 2
tab_width = 2

[{*.ts,*.js,*.json, *.tsx}]
indent_size = 2
tab_width = 2

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.htm,*.html}]
indent_size = 2
tab_width = 2

[{*.yaml,*.yml}]
indent_size = 2
